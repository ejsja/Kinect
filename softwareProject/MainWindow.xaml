<Window x:Class="KinectHandTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect SDK Sample" SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <StackPanel>
            <Grid Height="100" Name="grid1">
                <Button Content="Math" Name="MathButton" Width="193" Click="MathButton_Click" Margin="6,6,0,6" HorizontalAlignment="Left" />
                <Button Content="English" Name="EngButton" Width="193" HorizontalAlignment="Center" Click="EngButton_Click" Margin="446,6,2,6" />
            </Grid>
            <Canvas Height="480" HorizontalAlignment="Left" Margin="0,0,0,0" Name="canvas" VerticalAlignment="Top" Width="640" Grid.Row="0">
                <Image Name="Image" Width="640" Height="480" Canvas.Left="-1" Canvas.Top="2" />
                
                
            </Canvas>
        </StackPanel>
        
    </Grid>
    
</Window>